<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_activity_root"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/launcher_main_bg"
	android:focusable="true"
	android:focusableInTouchMode="true">

	<EditText
		android:id="@+id/edit_text_name"
		android:layout_width="140dp"
		android:layout_height="40dp"
		android:layout_margin="30dp"
		android:background="@drawable/launcher_main_edit_text_bg"
		android:digits="abcdefghijklmnopqrstuvwxyz_ABCDEFGHIJKLMNOPQRSTUVWXYZ"
		android:fontFamily="@font/montserrat_regular"
		android:gravity="center"
		android:hint="Введите никнейм"
		android:imeOptions="actionDone|flagNoFullscreen"
		android:inputType="textCapSentences"
		android:maxLength="23"
		android:paddingStart="8dp"
		android:paddingEnd="8dp"
		android:singleLine="true"
		android:textColor="@color/white"
		android:textColorHint="@color/white15"
		android:textSize="11.0sp"
		android:textStyle="italic"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageButton
		android:id="@+id/ib_info"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="10dp"
		android:background="@drawable/button_new_info"
		android:contentDescription="info"
		android:src="@drawable/launcher_main_info_ic"
		app:layout_constraintBottom_toBottomOf="@+id/edit_text_name"
		app:layout_constraintStart_toEndOf="@+id/edit_text_name"
		app:layout_constraintTop_toTopOf="@+id/edit_text_name" />

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/button_play"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="30dp"
		android:layout_marginEnd="52dp"
		android:background="@drawable/launcher_red_buttons_bg"
		android:drawableStart="@drawable/launcher_main_play_ic"
		android:drawablePadding="10dp"
		android:fontFamily="@font/montserrat_bold"
		android:paddingStart="28dp"
		android:paddingEnd="36dp"
		android:text="Играть"
		android:textColor="@color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/button_vk"
		app:layout_constraintHorizontal_bias="0.354"
		app:layout_constraintStart_toEndOf="@+id/button_clean_game"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.974" />

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/button_clean_game"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="30dp"
		android:background="@drawable/reg_field"
		android:drawablePadding="10dp"
		android:fontFamily="@font/montserrat_regular"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:text="Обновить игру"
		android:textAllCaps="false"
		android:textColor="@color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/tv_br"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="160dp"
		android:layout_marginBottom="172dp"
		android:fontFamily="@font/montserrat_bold"
		android:lineSpacingMultiplier="0.9"
		android:paddingStart="-3dp"
		android:text="ROSTOVSKIY RP"
		android:textAllCaps="true"
		android:textColor="@color/progress_gray"
		android:textSize="50.0sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<ImageButton
		android:id="@+id/button_vk"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/launcher_main_social_buttons_blue_bg_v2"
		android:contentDescription="vk"
		android:src="@drawable/launcher_main_vk_ic"
		app:layout_constraintEnd_toEndOf="@+id/button_discord"
		app:layout_constraintTop_toBottomOf="@+id/button_discord" />

	<ImageButton
		android:id="@+id/button_discord"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginEnd="28dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/launcher_main_social_buttons_blue_bg_v2"
		android:contentDescription="discord"
		android:src="@drawable/launcher_main_discord_ic"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.759" />

	<ImageButton
		android:id="@+id/button_telegram"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginEnd="28dp"
		android:layout_marginBottom="8dp"
		android:background="@drawable/launcher_main_social_buttons_blue_bg_v2"
		android:contentDescription="telegram"
		android:src="@drawable/launcher_main_telegram_ic"
		app:layout_constraintBottom_toTopOf="@+id/button_discord"
		app:layout_constraintEnd_toEndOf="parent" />

	<TextView
		android:id="@+id/text_view_info_about_nickname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="32dp"
		android:background="@drawable/launcher_main_info_bg"
		android:importantForAccessibility="no"
		android:paddingStart="8dp"
		android:paddingTop="16dp"
		android:paddingEnd="8dp"
		android:text="· формат ввода: Nick_Name\n· допустимая длина никнейма 3–23 символов\n· в никнейме запрещены оскорбительные
\nи нецензурные слова\n· никнейм должен содержать только латиницу\n· запрещено использование цифр и символов\n"
		android:textColor="@color/white"
		android:textSize="10.0sp"
		android:textStyle="italic"
		android:visibility="invisible"
		app:layout_constraintStart_toStartOf="@+id/ib_info"
		app:layout_constraintTop_toBottomOf="@+id/ib_info" />

	<ProgressBar
		android:id="@+id/progress_bar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:indeterminateDrawable="@drawable/progressbar_custom"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>